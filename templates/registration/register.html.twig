
{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <h2>Inscription</h2>
    <h4>Bienvenue sur Portfolio,
    
    <SCRIPT LANGUAGE="JavaScript">
        let maintenant=new Date();
        let jour=maintenant.getDate();
        let mois=maintenant.getMonth()+1;
        let an=maintenant.getFullYear();
        document.write("nous sommes le ",jour,"/",mois,"/",an,".");
    </SCRIPT>
    
    </h4>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email, {
            label: 'Adresse email'
        }) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe' 
        }) }}
        {{ form_row(registrationForm.role, {
            label: 'Roles' 
        }) }}
        {{ form_row(registrationForm.agreeTerms, {
            label: 'Acceptez les conditions'
         }) }}

        <button type="submit" class="btn btn-outline-success">S'inscrire</button>
    {{ form_end(registrationForm) }}
{% endblock %}
