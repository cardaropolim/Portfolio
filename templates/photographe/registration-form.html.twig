{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="links-photographe"></div>
    <h1>Modifier vos informations utilisateur</h1>  

        <!-- Bouton de retour à la page précédente -->
        <button class="back" onclick="history.back()" >⬅️</button>
        
    <div class='Container_parent'>
        <div class="Container">
            {{ form_start(form) }}
                {{ form_row(form.email) }}
                {{ form_row(form.ville) }}
                {{ form_row(form.code_postal) }}
                {{ form_row(form.pays) }}
                {{ form_row(form.plainPassword, {
                      'label': 'Mot de passe',
                }) }}
                {{ form_row(form.role, {
                    'label': 'Rôle',
                    'checked': true,
                }) }}
                {{ form_row(form.agreeTerms) }}
                <button type="submit" class="index_button">Enregistrer</button>
            {{ form_end(form) }}


        <a href={{ url('app_photographe_FAQ') }} class="index_button">Suppression du compte</a>


        </div>
    </div>
{% endblock %}
