{% extends 'base.html.twig' %}

{% block body %}

<h1>Réseaux sociaux</h1>

{% endblock %}    

/************************** Base ***************************************/

        .navbar-base {
            background-color: rgba(123, 77, 77, 0.614);
        }

        body {
            background-color: beige;    
            height: auto;
        }

        html {
            scroll-behavior: smooth;
            }

        h1 {
            text-align: center;
            color: darkcyan;
        }

/************* Style du menu hamburger pour les écrans de petite taille */

      .menu-hamburger {
            display: none;
            position: absolute;
            right: 5%;
            top: 7%;
            cursor:grab;
    }

            /* Style des liens de navigation */
        .navbar .nav-links ul {
            display: flex;
            margin-left: 25px;
            font-size: larger;

        }

        .navbar .nav-links ul li {
            display: flex;
            margin-left: 25px;
            font-size: larger;

        }

        .navbar .nav-links ul li:hover {
            background-color: rgb(144, 189, 207);
            cursor: grab;
        }

        .row.py-3 {
           
            display: flex;
            flex-wrap: nowrap;
        }


    @media screen and (max-width: 999px) {

      .menu-hamburger {
            display: block;
        }

        .hidden {
            z-index: -1;
        }
 
        .navbar {
            justify-content: center;
       
        } 
  
        .nav-links  {
            padding-top: 10em;
            top: 0;
            left: 0;
            display: block;
            position: absolute;
            background-color: rgba(99, 68, 102, 0.254);
            backdrop-filter: blur(20px);
            width: 100%;
            height: 200vh;
            align-items: center;
            flex-direction: column;
            margin-left: -100%;
            transition: fadeIn 5s;
            justify-content: center;
        }

         .nav-links li {
            width: 100em;
            justify-content: center;
            align-items: center;
        }
     
        .nav-links.mobile-menu {
            margin-left: 0;

        }
    
        .nav-links ul {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            
        }
    
        .navbar-base .nav-links ul li {
            margin: 25px 0;
            font-size: 1.5em;
     
        }
    }

    /* Style pour le menu mobile */
         .mobile-menu {
            margin-left: 0%;
         }

/************************** Modele Portfolio ***************************/

         .container_modele_index {
             display: flex;
            align-items: flex-end;
        
        }

        .example_wrapper_modele_index {
            height: 45em;
            background-size: cover;
            background-position: center center;
        }

        #Biographie, #Contact, #Bibliotheque, #Head {
            display: flex; 
            align-items: center;
            justify-content: center;        
            height: 25em;
            background-color: beige   
        }

            #Contact {
            flex-direction: column;
        }

            .navbar_book_modele {
            display: flex;
            justify-content: space-around;
            background-color: Thistle;
            word-spacing: 10px;
        }

            #tarifs_modele {
            border-collapse: collapse;
            width: 90%;
        }
            #tarifs_photographe {
                border-collapse: collapse;
                width: 90%;
        }
            th, td {
                border: 4px groove purple;
                padding: 5px;
        }
            .form_profile { 
                font-weight: bold;
        }

            .form_prestations {
                color:darkmagenta;  
                font-weight: bold;
        }

            .form_prix {
                color:darkmagenta;
                font-weight: bold;
        }

 /************************** Modele Photographe ***************************/

        .container_index_photographe {
            display: flex;
            align-items: flex-end;
        } 

        .navbar_book_photographe {
            display: flex;
            justify-content: space-around;
            background-color: Thistle;
            word-spacing: 10px;
        }

        .form_photographe_profile { 
            font-weight: bold;
        }

        .example-wrapper_photographe_index {
            height: 45em;
            background-size: cover;
            background-position: center center;
        }

/************************ scrollTopButton ****************************/

        #scrollToTopButton {
            display: block;
            z-index: 99;
            opacity: 0;
            visibility: hidden;
            position: fixed;
            bottom: 20px;
            right: 30px;
            border: none;
            border-radius: 4px;
            outline: none;
            width: 50px;
            height: 50px;
            padding: 8px;
            background-color: rgb(83, 107, 166);
        }

/******************* bouton scroll haut de page **************************/


        #scrollToTopButton i {
            color: rgb(118, 36, 36);
        }
        #scrollToTopButton:hover,
        #scrollToTopButton:focus,
        #scrollToTopButton:focus-within {
            cursor: pointer;
            background-color: #27812e;
        }