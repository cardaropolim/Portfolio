{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <h1>Complétez vos informations utilisateur</h1>
    <div class='Container_parent'>
        <div class="Container">
            {{ form_start(form) }}
                {{ form_row(form.email) }}
                {{ form_row(form.ville) }}
                {{ form_row(form.code_postal) }}
                {{ form_row(form.pays) }}
                {{ form_row(form.plainPassword, {
                      'label': 'Mot de passe',
                }) }}
                {{ form_row(form.role, {
                    'label': 'Rôle',
                    'checked': true,
                }) }}
                {{ form_row(form.agreeTerms) }}
                <button type="submit" class="index_button">S'inscrire</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
